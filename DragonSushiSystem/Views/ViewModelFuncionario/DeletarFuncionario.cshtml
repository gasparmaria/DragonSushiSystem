@model DragonSushiSystem.ViewModels.ViewModelFuncionario

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="modal-dialog">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Excluir Funcionário</h4>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="modal-body">
                        <h3>Deseja excluir o funcionário?</h3>

                        <span><b>Código: </b>@Html.DisplayFor(model => model.Funcionario.FuncionarioID)</span>

                        <span><b>Nome: </b>@Html.DisplayFor(model => model.Funcionario.FuncionarioNome)</span>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" id="btnExcluir" type="submit" onclick="">Excluir</button>
                        <button class="btn btn-default" data-dismiss="modal" id="btnCancel">Cancelar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>